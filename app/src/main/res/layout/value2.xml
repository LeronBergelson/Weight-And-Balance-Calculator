<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#202020">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:background="@drawable/carouselglare"
        android:backgroundTint="#77ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Plane Selected:"
    android:id="@+id/Planeselection_txt"
    android:textColor="#f60004"
    android:layout_above="@+id/PW_num"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="50dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-----"
        android:id="@+id/planeselected"
        android:textColor="#ee0000"
        android:layout_alignTop="@+id/Planeselection_txt"
        android:layout_toEndOf="@+id/FSW_txt" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Front Seat Weight:"
    android:id="@+id/FSW_txt"
    android:textColor="#ffffff"
    android:layout_marginTop="96dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal|numberSigned"
    android:ems="4"
    android:id="@+id/PW_num"
    android:textColor="#ffffff"
    android:autoText="false"
    android:singleLine="false"
    android:layout_alignTop="@+id/FSW_txt"
    android:layout_toEndOf="@+id/FB_num" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="lbs"
    android:id="@+id/lbs1"
    android:layout_alignBottom="@+id/FSW_txt"
    android:layout_toEndOf="@+id/PW_num"
    android:textColor="#ffffff" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Rear Seat Weight:"
    android:id="@+id/RSW_txt"
    android:textColor="#ffffff"
    android:layout_below="@+id/PW_num"
    android:layout_alignParentStart="true"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal|numberSigned"
    android:ems="4"
    android:id="@+id/PM_num"
    android:textColor="#ffffff"
    android:layout_below="@+id/PW_num"
    android:layout_alignStart="@+id/PW_num"
    android:layout_marginTop="18dp" />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="lbs"
    android:id="@+id/lbs2"
    android:layout_alignBottom="@+id/RSW_txt"
    android:layout_alignStart="@+id/lbs1"
    android:textColor="#ffffff" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Forward Baggage:"
    android:id="@+id/Baggage_txt"
    android:layout_below="@+id/PM_num"
    android:layout_alignParentStart="true"
    android:layout_marginTop="20dp"
    android:textColor="#ffffff"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rear Baggage:"
        android:id="@+id/textView15"
        android:textColor="#ffffff"
        android:layout_below="@+id/Baggage_txt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:ems="4"
        android:id="@+id/RBaggage_num"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignEnd="@+id/hrs" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="lbs"
        android:id="@+id/textView17"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/RBaggage_num"
        android:layout_toEndOf="@+id/RBaggage_num" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal|numberSigned"
    android:ems="4"
    android:id="@+id/Baggage_num"
    android:textColor="#ffffff"
        android:layout_alignTop="@+id/Baggage_txt"
        android:layout_alignStart="@+id/PM_num" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="lbs"
    android:id="@+id/lbs3"
    android:textColor="#ffffff"
    android:layout_alignBottom="@+id/Baggage_txt"
    android:layout_toEndOf="@+id/Baggage_num" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Fuel Loading:"
    android:id="@+id/FL_txt"
    android:textColor="#ffffff"
    android:layout_marginTop="68dp"
    android:layout_below="@+id/Baggage_txt"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="10dp" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal|numberSigned"
    android:ems="4"
    android:id="@+id/FL_num"
    android:textColor="#ffffff"
    android:layout_alignTop="@+id/FL_txt"
    android:layout_toEndOf="@+id/textView15" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="US gal"
    android:id="@+id/gal"
    android:textColor="#ffffff"
    android:layout_alignTop="@+id/FL_num"
    android:layout_toStartOf="@+id/lbs3" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal|numberSigned"
    android:ems="4"
    android:id="@+id/hrs_num"
    android:textColor="#ffffff"
    android:layout_alignTop="@+id/FL_text"
    android:layout_toEndOf="@+id/FL_txt"
    android:layout_marginBottom="100dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Hrs"
    android:id="@+id/hrs"
    android:textColor="#ffffff"
    android:layout_alignTop="@+id/hrs_num"
    android:layout_toEndOf="@+id/hrs_num" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Flight Time:"
    android:id="@+id/FL_text"
    android:textColor="#ffffff"
    android:layout_below="@+id/FB_num"
    android:layout_alignParentStart="false"
    android:layout_marginTop="23dp"
    android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Fuel Burn:"
    android:id="@+id/FB_txt"
    android:textColor="#ffffff"
    android:layout_below="@+id/FL_num"
    android:layout_alignParentStart="true"
    android:layout_marginTop="23dp"
    android:layout_marginLeft="10dp" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal|numberSigned"
    android:ems="4"
    android:id="@+id/FB_num"
    android:textColor="#ffffff"
    android:layout_alignTop="@+id/FB_txt"
    android:layout_toEndOf="@+id/FL_text" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Gal/Hrs"
    android:id="@+id/textView2"
    android:textColor="#ffffff"
    android:layout_alignTop="@+id/FB_num"
    android:layout_toEndOf="@+id/FB_num" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="   Calculate   "
    android:id="@+id/flightbutton"
    android:textColor="#f60004"
    android:background="#313131"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/FL_text"
        android:layout_alignStart="@+id/hrs_num" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>


