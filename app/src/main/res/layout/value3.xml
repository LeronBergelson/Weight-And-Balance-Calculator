<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202020">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:background="@drawable/carouselglare"
        android:backgroundTint="#77ffffff"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Plane Selected:"
        android:id="@+id/Planeselection_txt"
        android:textColor="#f60004"
        android:layout_above="@+id/FSW_num"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Front Seat Weight:"
        android:id="@+id/FSW_txt"
        android:textColor="#ffffff"
        android:layout_marginTop="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:ems="4"
        android:id="@+id/FSW_num"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/FSW_txt"
        android:layout_toEndOf="@+id/FB_num"
        android:autoText="false"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="lbs"
        android:id="@+id/lbs1"
        android:layout_alignBottom="@+id/FSW_txt"
        android:layout_toEndOf="@+id/FSW_num"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rear Seat Weight:"
        android:id="@+id/RSW_txt"
        android:textColor="#ffffff"
        android:layout_below="@+id/FSW_num"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:ems="4"
        android:id="@+id/RSW_num"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/RSW_txt"
        android:layout_toEndOf="@+id/RSW_txt" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="lbs"
        android:id="@+id/lbs2"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/RSW_txt"
        android:layout_toEndOf="@+id/RSW_num" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Baggage Weight:"
        android:id="@+id/Baggage_txt"
        android:layout_below="@+id/RSW_num"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:ems="4"
        android:id="@+id/Baggage_num"
        android:textColor="#ffffff"
        android:layout_marginLeft="13dp"
        android:layout_alignTop="@+id/Baggage_txt"
        android:layout_toEndOf="@+id/Baggage_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="lbs"
        android:id="@+id/lbs3"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/Baggage_txt"
        android:layout_toEndOf="@+id/Baggage_num" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fuel Loading:"
        android:id="@+id/FL_txt"
        android:layout_marginTop="18dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/Baggage_num"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:ems="4"
        android:id="@+id/FL_num"
        android:textColor="#ffffff"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/FL_txt"
        android:layout_toEndOf="@+id/FL_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="US gal"
        android:id="@+id/gal"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/FL_num"
        android:layout_toEndOf="@+id/FL_num" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:ems="4"
        android:id="@+id/hrs_num"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/FL_text"
        android:layout_toEndOf="@+id/FL_text"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hrs"
        android:id="@+id/hrs"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/hrs_num"
        android:layout_toEndOf="@+id/hrs_num" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Flight Time:"
        android:id="@+id/FL_text"
        android:textColor="#ffffff"
        android:layout_below="@+id/FB_num"
        android:layout_alignParentStart="false"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fuel Burn:"
        android:id="@+id/FB_txt"
        android:textColor="#ffffff"
        android:layout_below="@+id/FL_num"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:ems="4"
        android:id="@+id/FB_num"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/FB_txt"
        android:layout_toEndOf="@+id/FB_txt"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gal/Hrs"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/FB_num"
        android:layout_toEndOf="@+id/FB_num" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Calculate   "
                android:id="@+id/flightbutton"
                android:textColor="#f60004"
                android:background="#313131"
                android:layout_below="@+id/hrs_num"
                android:layout_alignEnd="@+id/FL_num" />

            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-----"
        android:id="@+id/planeselected"
        android:textColor="#ee0000"
        android:layout_alignTop="@+id/Planeselection_txt"
        android:layout_toEndOf="@+id/FSW_txt" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
